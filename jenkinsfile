pipeline{
    agent { label 'dev'}

    stages{
        stage('code'){
          steps{
             git url:'https://github.com/Ephysokka/3mtt-capstone-project.git', branch: 'main'
                }
        }
        stage('Build'){
          steps{
              echo 'Building the application...' 
              sh 'npm install'
          }
        }
        stage('Test'){
          steps{
              echo 'Testing the application...'
              sh 'npm test'
          }
        }
        stage('Deploy'){
          steps{
              echo 'Deploying the application...'
              sh 'npm run deploy'
          }
        }
    }
}